<div class="container">
<p id="alert"><%= alert %></p>
<div class="form-signin">
<h1>Login</h1>
<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], class: 'form-control'%>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password, params[:password], class: 'form-control'%>
  </div>
  <br>
  <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>
</div>
</div>
